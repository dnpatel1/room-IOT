<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="3"
    android:orientation="vertical"
    android:layout_marginTop="60dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_fan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toys_black_24dp"
        android:layout_weight="1.2">

    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tv_mqtt_status"
        android:layout_weight="0.2"
        />

    <TextView
        android:id="@+id/tv_fan_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textStyle="bold"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"

        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_fan_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAN ON"
        android:layout_weight="0.2"
        android:onClick="fanOn"/>

    <Button
        android:id="@+id/btn_fan_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAN OFF"
        android:layout_marginTop="20dp"
        android:layout_weight="0.2"
        android:onClick="fanOff"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by Deep Patel
        \nhttps://github.com/dnp99
        \nhttps://www.linkedin.com/in/deep-patel4283/ "/>

</androidx.appcompat.widget.LinearLayoutCompat>


